{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "toxicity-lib": ["dist/toxicity-lib"],
      "toxicity-lib/*": ["dist/toxicity-lib/*"]
    }
  },
  "exclude": ["src", "e2e"]
}
